<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .topRight {
            position: absolute;
            right: 10px;
            top: 10px;
        }
        .top30 {
            top: 30px;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:HorizontalPanel addStyleNames="{style.topRight}">
            <g:Label ui:field="welcomeLabel"></g:Label>
            <g:HTML>&nbsp;</g:HTML>
            <g:Label ui:field="userName"></g:Label>
        </g:HorizontalPanel>
        <g:HTMLPanel addStyleNames="{style.topRight} {style.top30}">
            <g:Anchor ui:field="logoutLink"></g:Anchor>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
