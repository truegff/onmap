<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="ge.lanmaster.onmap.root.client.ui.Resources"></ui:with>

    <g:SimplePanel addStyleNames="{resources.style.fullSize}">

        <g:HTMLPanel addStyleNames="{resources.style.fullSize}">
            <table style="height:100%; width:100%">
                <tr>
                    <td align="right" width="50%">
                        <g:Label ui:field="loadingLabel">Loading...</g:Label>
                    </td>
                    <td align="left" width="50%">
                        <g:Image resource="{resources.loading}"></g:Image>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>

    </g:SimplePanel>

</ui:UiBinder>
